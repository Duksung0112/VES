<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tabHome"
    android:layout_width="match_parent"
    android:layout_height="560dp"
    android:background="#fffcf3"
    android:orientation="vertical"
    tools:context=".HomeActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The Guardian Top 3"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/lo1">

                    <ImageButton
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#EDE6cc"
                        android:scaleType="centerCrop"
                        android:src="@drawable/lv1"
                        android:id="@+id/imglv1"/>
                    <TextView
                        android:layout_width="135dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:textColor="@color/black"
                        android:id="@+id/tvlv1"
                        android:gravity="center_vertical"
                        android:text="기사 제목"
                        android:textSize="20dp"
                       >

                    </TextView>

                </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E1E3E4"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/lo2"
        >
            <ImageButton
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#EDE6cc"
                        android:scaleType="centerCrop"
                        android:src="@drawable/lv2"
                        android:id="@+id/imglv2"/>
                    <TextView
                        android:layout_width="135dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:textColor="@color/black"
                        android:id="@+id/tvlv2"
                        android:gravity="center_vertical"
                        android:textSize="20dp">

                    </TextView>

                </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E1E3E4"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/lo3"
                    >
                    <ImageButton
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#EDE6cc"
                        android:scaleType="centerCrop"
                        android:src="@drawable/lv3"
                        android:id="@+id/imglv3"/>
                    <TextView
                        android:layout_width="135dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:textColor="@color/black"
                        android:id="@+id/tvlv3"
                        android:gravity="center_vertical"
                        android:textSize="20dp">

                    </TextView>

                </LinearLayout>

            </LinearLayout>
